
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/InputBoardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/floating_pane"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/RowA"
            android:layout_width="wrap_content"
            android:layout_height="50dip" >

            <Button
                android:id="@+id/buttonSquareRoot"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/square_root" />

            <Button
                android:id="@+id/buttonSquared"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/squared" />

            <Button
                android:id="@+id/buttonExponent"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/exponent" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/add" />

            <Button
                android:id="@+id/button7"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/seven" />

            <Button
                android:id="@+id/button8"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/eight" />

            <Button
                android:id="@+id/button9"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/nine" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/RowB"
            android:layout_width="wrap_content"
            android:layout_height="50dip" >

            <Button
                android:id="@+id/buttonSin"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/sin" />

            <Button
                android:id="@+id/buttonCos"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/cos" />

            <Button
                android:id="@+id/buttonTan"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/tan" />

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/subtract" />

            <Button
                android:id="@+id/button4"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/four" />

            <Button
                android:id="@+id/button6"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/six" />

            <Button
                android:id="@+id/button5"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/five" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/RowC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonLParen"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/left_parenthesis" />

            <Button
                android:id="@+id/buttonRParen"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/right_parenthesis" />

            <Button
                android:id="@+id/buttonLog"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/log" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/multiply" />

            <Button
                android:id="@+id/button1"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/one" />

            <Button
                android:id="@+id/button2"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/two" />

            <Button
                android:id="@+id/button3"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/three" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/RowF"
            android:layout_width="wrap_content"
            android:layout_height="50dip" >

            <Button
                android:id="@+id/buttonX"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/var_x" />

            <Button
                android:id="@+id/buttonY"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/var_y" />

            <Button
                android:id="@+id/buttonFactorial"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/factorial" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/divide" />

            <Button
                android:id="@+id/buttonPeriod"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/period" />

            <Button
                android:id="@+id/button0"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:onClick="onInputButtonClicked"
                android:text="@string/zero" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:longClickable="true"
                android:onClick="onInputButtonClicked"
                android:text="@string/delete" />

        </LinearLayout>

    </LinearLayout>
